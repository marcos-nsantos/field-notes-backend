                "altitude": {
                    "type": "number"
                },
                "client_id": {
                    "type": "string",
                    "maxLength": 36
                },
                "content": {
                    "type": "string"
                },
                "is_deleted": {
                    "type": "boolean"
                },
                "latitude": {
                    "type": "number",
                    "maximum": 90,
                    "minimum": -90
