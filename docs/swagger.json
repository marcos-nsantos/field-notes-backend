                "longitude": {
                    "type": "number",
                    "maximum": 180,
                    "minimum": -180
                },
                "title": {
                    "type": "string",
                    "maxLength": 255
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "request.SyncRequest": {
            "type": "object",
            "required": [
                "device_id"
